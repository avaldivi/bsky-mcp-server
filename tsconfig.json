{
    "compilerOptions": {
      "target": "es2020",
      "module": "nodenext",
      "moduleResolution": "nodenext",
      "outDir": "build",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "composite": true,
      "declaration": true,
      "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "scripts/**/*", "test/**/*"]
  }